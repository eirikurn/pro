#!/usr/bin/env node

/**
 * Enable CoffeeScript
 */

require('coffee-script')

/**
 * Module dependencies.
 */

var prototyper = require('../')
  , program = require('commander');

/**
 * Option parsing
 */
program
  .version(prototyper.version)
  .option('-d, --dir [dir]', 'Directory containing the prototype sources', process.cwd())
  .option('-l, --log [level]', 'Controls how verbose the logs will be, can be debug, info, warn and error', 'info')
  .option('-o, --output [dir]', 'Output directory for static web content', process.cwd() + "/_build")
  .parse(process.argv);

// Host and port
var host = '0.0.0.0'
  , port = program.args.pop() || '8080'

if (~port.indexOf(':')) {
  port = port.split(':');
  host = port[0];
  port = port[1];
}

var options =
  { host: host
  , port: port
  , dir: program.dir
  , logLevel: program.log
  , output: program.output
  };

/**
 * Start prototyper
 */
prototyper.serve(options);
